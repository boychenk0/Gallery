.span4
  %h2{:id=>'cssmenu-title'}
    =t('.categories')
  %div{:id=>'cssmenu'}
    %ul
      %li
        = link_to root_path do
          %span
            =t('. all_image') + "(#{Image.count})"
      -#    Fix mE!!
      -@categories.each do |category|
        %li
          =link_to category do
            %span
              = category.name
              (#{category.images.size})
.span10
  %h2.text-center
    = @category.name.capitalize
  .gPopDemoWapper
    %div{:class=>"gPop-gallery", :id=>"demo2"}
      %ul
        -@images.each do |img|
          %li
            = link_to "/categories/#{img.category.id}/images/#{img.id}", :id => '1' do
              = image_tag img.url, size: '300x300', alt: 'Image'
            %div
              %p
                = pluralize(img.likes.size, t('.like'))
              %p
                = pluralize(img.comments.size, t('.comment'))
  .text-center
    = paginate @images







