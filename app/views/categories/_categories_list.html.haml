#portfolio
  -(@categories = Category.category_sort_by_images_count.includes(:users, :images => [:category]).page(params[:page]).per(5)).each do |cat|
    .item
      =link_to category_path(cat.id) do
        =image_tag cat.images.first.url, :alt => cat.name
      %span
        =cat.name
        (#{cat.images_count})
        -if user_signed_in? && cat.users.include?(current_user)
          =image_tag 'unsubscribe1.jpg', :size => '25x25', :id=>"#{cat.id}", :class=>'subscribe'
        - else
          =image_tag 'subscribe1.jpg', :size => '25x25', :id=>"#{cat.id}", :class=>'subscribe'
.btn-group.paginate
  = paginate @categories, :remote => true, :window => 1